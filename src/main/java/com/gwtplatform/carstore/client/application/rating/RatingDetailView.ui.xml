<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:with field="resource" type="com.gwtplatform.carstore.client.resources.AppResources"/>
    <ui:import field="com.gwtplatform.carstore.client.debug.DebugIds.*"/>

    <ui:style>
        .panelWrapper {
            padding: 10px;
            padding-top: 20px;
        }

        .formRow {
            margin-bottom: 10px;
        }

        .formRow select {
            width: 100%;
        }
    </ui:style>

    <g:HTMLPanel styleName="{style.panelWrapper}">
        <div class="{style.formRow}">
            <g:ValueListBox ui:field="car"/>
        </div>

        <div>
            <g:IntegerBox ui:field="rating" maxLength="3" styleName="{resource.styles.mobileTextField}"
                          debugId="{DBG_RATING_INPUT}"/>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>
