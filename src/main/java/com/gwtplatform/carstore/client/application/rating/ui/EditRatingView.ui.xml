<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <ui:import field="com.gwtplatform.carstore.client.debug.DebugIds.*"/>

    <g:PopupPanel glassEnabled="true" autoHideEnabled="true" animationEnabled="true">
        <g:HTMLPanel>
            <div>
                <g:InlineLabel>Car:</g:InlineLabel>
                <g:ValueListBox ui:field="car"/>
            </div>

            <div>
                <g:InlineLabel>Your rating:</g:InlineLabel>
                <g:IntegerBox ui:field="rating" maxLength="3" debugId="{DBG_RATING_INPUT}"/>
            </div>

            <div>
                <g:Button ui:field="save" debugId="{DBG_RATING_SAVE}">Save</g:Button>
                <g:Button ui:field="close">Close</g:Button>
            </div>
        </g:HTMLPanel>
    </g:PopupPanel>
</ui:UiBinder>
