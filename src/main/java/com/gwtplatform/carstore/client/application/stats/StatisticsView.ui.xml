<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:datepicker="urn:import:com.google.gwt.user.datepicker.client">

    <ui:import field="com.gwtplatform.carstore.client.debug.DebugIds.*"/>

    <g:HTMLPanel>
        <datepicker:DatePicker ui:field="datePicker" debugId="{DBG_EXTRACT_YEAR_DATE_PICKER}"/>
        <g:Button ui:field="extractYear" debugId="{DBG_EXTRACT_YEAR_BUTTON}">Extract Year</g:Button>
        <p>
            Result:
            <g:InlineLabel ui:field="result" debugId="{DBG_EXTRACT_YEAR_RESULT}"/>
        </p>
    </g:HTMLPanel>
</ui:UiBinder>
